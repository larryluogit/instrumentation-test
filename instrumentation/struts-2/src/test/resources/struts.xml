<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
  "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

  <constant name="struts.devMode" value="true" />

  <package name="basic-struts2" extends="struts-default">
    <global-results>
      <result name="exception" type="httpheader">
        <param name="error">500</param>
      </result>
    </global-results>

    <global-exception-mappings>
      <exception-mapping exception="java.lang.Exception" result="exception" />
    </global-exception-mappings>

    <action name="success" class="GreetingAction" method="success">
      <result type="freemarker" name="greeting">greeting.ftl</result>
    </action>
    <action name="query" class="GreetingAction" method="query">
      <result type="freemarker" name="query">query.ftl</result>
    </action>
    <action name="exception" class="GreetingAction" method="exception">
      <result type="freemarker" name="success">greeting.ftl</result>
    </action>
  </package>

</struts>